<table class="table table-striped">


<tr>
<td><%= paginate @books %></td>
</tr>

<% @books.each do |book| %>
<tr>
 	  <td><%= book.name %><td>
  <%#= link_to 'Show', :controller => 'books', :action => 'show', :id => book %>
  <%#= link_to 'Edit', :controller => 'books', :action => 'edit', :id => book %>
  <%#= link_to 'Delete', :controller => 'books', :action => 'destroy', :id => book %>
  <td><button type="button" class="btn btn-default"><%= link_to "Show", book_path(book) %></button></td>
  <td><button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_book_path(book) %></button></td>
  <td><button type="button" class="btn btn-danger"><%= link_to 'Delete', book_path(book), :method => :delete %></button></td>
  <td><%= button_to 'Delete', book_path(book), :method => :delete %></td>
</tr>
<% end %>
<%#= link_to 'New book', :controller => 'books', :action => 'new' %>
<tr>
<td><%= link_to 'New Book', new_book_path %></td>
</tr>
</table>